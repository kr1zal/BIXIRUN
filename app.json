{
  "expo": {
    "name": "BIXIRUN",
    "slug": "BIXIRUN",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon-ios.png",
    "scheme": "bixirun",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bixirun.app",
      "buildNumber": "3",
      "icon": "./assets/images/app-icon-ios.png",
      "infoPlist": {
        "NSCameraUsageDescription": "Приложение использует камеру для записи тренировок",
        "NSMicrophoneUsageDescription": "Приложение использует микрофон для записи звука во время тренировок",
        "NSPhotoLibraryUsageDescription": "Приложение сохраняет видео тренировок в галерею",
        "NSPhotoLibraryAddUsageDescription": "Приложение сохраняет видео тренировок в медиатеку",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["bixirun"]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.BIXIRUN",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "bixirun.com",
              "pathPrefix": "/product"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Разрешить приложению использовать Face ID для входа."
        }
      ],
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Разрешить приложению использовать Face ID для защиты данных входа."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Приложение использует камеру для записи тренировок",
          "microphonePermission": "Приложение использует микрофон для записи звука во время тренировок",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Приложение сохраняет видео тренировок в галерею",
          "savePhotosPermission": "Приложение сохраняет видео тренировок в галерею",
          "isAccessMediaLocationEnabled": true
        }
      ],
      "expo-audio",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "supabaseUrl": "https://wesrkttwjuvclvfkuxzx.supabase.co/",
      "supabaseAnonKey": "sb_publishable_LDbqC5uAVqU5N9evkAR7ag_7XQw5tAA",
      "eas": {
        "projectId": "12e971b5-f22f-456b-8d4f-f12b906923f2"
      }
    },
    "owner": "bixirun"
  }
}
